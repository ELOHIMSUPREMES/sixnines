%html
  %head
    %title sixnines
    %meta{:charset => 'UTF-8'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
    %meta{:name => 'keywords', :content => 'availability, six nines, web site'}
    %meta{:name => 'description', :content => 'Hosted web site availability checker'}
    %link{:type => 'text/css', :href => url('css/main.css'), :rel => 'stylesheet'}
    %link{:rel => 'shortcut icon', :href => '/images/logo.png'}
  %body
    %p
      %a{:href => '/'}
        %img.logo{:src => '/images/logo.svg'}
    %p
      - if defined? user
        ='@' + user
      - else
        %a{:href=>login_link}
          login
    =yield
    %p
      Version
      = succeed "." do
        =ver
    %p
      It is open source, please
      = succeed "." do
        %a{:href => 'https://github.com/yegor256/sixnines'} contribute
    %p
      Made by
      = succeed "." do
        %a{:href => 'http://www.yegor256.com'} @yegor256
